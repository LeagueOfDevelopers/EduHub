<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/metalic</item>
        <item name="colorAccent">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="windowActionBar">true</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="DrawerArrowToggle" parent="@style/Widget.AppCompat.DrawerArrowToggle">

        <item name="color">#ffffff</item>



    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyCustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#FFFFFF</item>
    </style>



    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontPath">assets/Roboto-Medium.ttf</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="fontPath">assets/Roboto-Medium.ttf</item>
    </style>

</resources>
