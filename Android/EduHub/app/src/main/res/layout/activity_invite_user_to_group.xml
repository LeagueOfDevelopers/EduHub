<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.lod_misis.user.eduhub.InviteUserToGroup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metalic">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.PopupOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:background="@color/grey"
                android:src="@drawable/ic_arrow_back_black_24dp" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/header">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_grey">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_launcher_round"/>

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Имя группы тут"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                <FrameLayout
                    android:layout_width="12dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="70dp"
                    android:background="@color/lightGrey">

                </FrameLayout>
                <EditText
                    android:id="@+id/invite"
                    android:background="#FFFFFF"
                    android:layout_width="208dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="70dp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/UserRole"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_toRightOf="@+id/invite"
                    android:background="@color/lightGrey"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_alignRight="@+id/UserRole"
                    android:layout_marginTop="70dp" />

                <ImageView
                    android:id="@+id/search_item"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_toRightOf="@+id/UserRole"
                    android:background="@color/grey"
                    android:src="@drawable/ic_search_black_24dp" />
            </RelativeLayout>
            
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header2"
            android:layout_marginTop="8dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
