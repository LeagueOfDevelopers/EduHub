<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="События группы"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="17dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="175dp"
                android:text="Курс завершился"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                />
                <Spinner
                    android:id="@+id/end_course"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Учебный план принят"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/course_accepted"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Учбный план отклонен"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/course_rejected"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Учебный план предложен"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/course_offered"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Группа сформирована"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/full_group"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Участник покинул группу"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/left_paticipant"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Смена создателя группы"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/сchange_creator_role"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Новый участник"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/new_participant"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Учитель найден"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/find_teacher"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="События профиля"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="17dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="175dp"
                    android:text="Получен отзыв"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/get_review"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:text="Ваше приглашение принято"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/your_invite_accepted"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:text="Ваше приглашение отклонено"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/your_invite_rejected"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >
                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:text="Получено новое приглашение"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/get_new_invite"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >
                </Spinner>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="События санкций"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="17dp"/>
                <RelativeLayout
                    android:id="@+id/report_message_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="175dp"
                        android:text="Report Message"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        />
                    <Spinner
                        android:id="@+id/report_message"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                    </Spinner>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sanctions_to_admin_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="190dp"
                        android:text="Применение санкций к админу"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        />
                    <Spinner
                        android:id="@+id/sanctions_to_admin"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                    </Spinner>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sanctions_to_user_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="190dp"
                        android:text="Применение санкций к пользователю"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        />
                    <Spinner
                        android:id="@+id/sanctions_to_user"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                    </Spinner>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="190dp"
                        android:text="Санкции отменены"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        />
                    <Spinner
                        android:id="@+id/not_sunctions"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                    </Spinner>
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</FrameLayout>
