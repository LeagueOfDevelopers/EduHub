<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/metalic">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/metalic">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">
            <TextView
                android:id="@+id/title_of_invitation"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Вас пригласили в группу!"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_below="@+id/title_of_invitation"
                android:id="@+id/name_of_invite"
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="Александр"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:background="@color/grey"/>


            <TextView
                android:id="@+id/text_of_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_of_invite"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:text="Ярослав пригласил вас в группу в роли учителя! Ниже представлена информация о группе."
                android:textColor="@color/black"
                android:textSize="12dp"
                android:background="@color/grey"/>

            <ImageView
                android:id="@+id/toogle_notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_of_invitation"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_expand_more_black_24dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

</android.support.constraint.ConstraintLayout>