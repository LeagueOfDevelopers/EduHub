<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBlue">

        <ImageView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/title"
             />
        <TextView
            android:id="@+id/edit_email_title"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#FFFFFF"
            android:text="Email"/>
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_email_title"
            android:layout_centerHorizontal="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15dp"
            android:ems="10"

            android:inputType="textPersonName"
            android:paddingLeft="7dp"

            android:paddingRight="7dp"
             />
        <TextView
            android:id="@+id/edit_password_title"
            android:layout_marginTop="20dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_email"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="Пароль"/>
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_alignLeft="@+id/edit_email"
            android:layout_alignStart="@+id/edit_email"
            android:layout_below="@+id/edit_password_title"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:ems="10"

            android:inputType="textPassword"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
             />

        <Button
            android:id="@+id/sign_in"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/edit_password"
            android:layout_alignStart="@+id/edit_password"
            android:layout_below="@+id/edit_password"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:textColor="@color/darkBlue"
            style="@style/MyCustomTabLayout"
            android:text="Войти" />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:layout_below="@+id/sign_in"
            android:text="@string/WouldYouLikeRegistr"
            android:layout_marginTop="20dp"
            android:textSize="18dp"

            android:layout_alignLeft="@+id/edit_password"
            android:layout_alignStart="@+id/edit_password"
            android:textColor="#FFFFFF"
            android:textAlignment="center"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>