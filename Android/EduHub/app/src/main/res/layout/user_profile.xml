<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metalic">
        <android.support.v7.widget.CardView
            android:id="@+id/top_card"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/name_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:text="Александр"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/email_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/name_user_profile"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="@color/black"
                    android:text="eduHub@misis.ru"
                    android:textSize="9dp" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="18dp"
                    android:gravity="end"
                    android:text="статус"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_below="@+id/top_card"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/header_meddle_card"
                    android:layout_width="102dp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:text="Личные данные"
                    android:textSize="12dp"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:text="редактировать"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:textAlignment="viewEnd"
                    android:gravity="end"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/header_meddle_card"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_name"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Имя"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="Александр"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_email"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/card_of_name"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_email"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="eduHub@misis.ru"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12dp"

                             />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_sex"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/card_of_email"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_sex"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Пол"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="Мужской"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                             />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/card_of_sex"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_birth"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Год рождения"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="1999"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_exp"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/card_of_birth"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_exp"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Опыт работы"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="Опыта работы нет"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_of_skils"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/card_of_exp"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey">

                        <TextView
                            android:id="@+id/title_card_of_skils"
                            android:layout_width="70dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="Навыки"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="82dp"
                            android:text="Занимаюсь разработкой под андроид.Также постепенно совершенствуюсь и двигаюсь вперед,с оптимизмом в будущее!"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12dp"/>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_below="@+id/card_of_skils"
                    android:background="@color/grey">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_vk"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44dp"
        android:text="id1231231"
        android:textColor="@color/black"
        android:textSize="13dp" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:src="@drawable/ic_telegram"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="150dp"
        android:text="/@user"
        android:textColor="@color/black"
        android:textSize="13dp" />

</RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>