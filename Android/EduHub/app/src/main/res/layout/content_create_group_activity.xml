<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metalic">



        <android.support.v7.widget.CardView
            android:id="@+id/top_card_create_group"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/dark_grey">

                <ImageView
                    android:id="@+id/label_of_group"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                     />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dark_grey"
                    android:text="Название"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/name_of_group_create"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="26dp"
                    android:background="#FFFFFF"
                    android:focusable="auto"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_card_create_group"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_grey">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:text="Тип"
                    android:textColor="@color/black"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/type_of_education"
                    android:layout_width="122dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="12dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_alignRight="@+id/type_of_education"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/type_of_education"
                    android:text="Стоимость"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/cost"
                    android:layout_width="100dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/type_of_education"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:background="#FFFFFF"
                    android:focusable="auto"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/type_of_education"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/cost"
                    android:background="@color/grey"
                    android:src="@drawable/ic_dollar_24dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/cost"
                    android:text="Размер"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/participants"
                    android:layout_width="100dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/cost"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/participants"
                    android:text="Теги"
                    android:textColor="@color/black"/>

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/tagsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/participants"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="30dp"
                    android:minHeight="31dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="14dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@color/veryGrey"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsPaddingLeft="5dp"
                    app:tagsTextColor="@color/black"
                    app:tagsTextSize="10dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="Описание"
                    android:textSize="12dp"
                    android:layout_below="@id/tagsEditText"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/about_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tagsEditText"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="5dp"
                    android:background="#FFFFFF"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/privacy"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/about_group"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/ic_black_circle"
                    android:text="Приватная"
                    android:textSize="10dp"
                    android:textDirection="rtl" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/create_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/veryGrey"
            android:text="создать группу" />
    </RelativeLayout>
</FrameLayout>