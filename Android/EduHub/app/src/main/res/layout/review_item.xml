<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/metalic">
        <TextView
            android:layout_width="177dp"
            android:layout_height="19dp"
            android:id="@+id/reviewTitle"
            android:text="Основы программирования"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reviewText"
            android:layout_below="@+id/reviewTitle"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:text="Ооооооооооооооооооооооооооооооооооооо"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="15dp"
            android:id="@+id/author"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reviewText"
            android:layout_marginBottom="5dp"
            android:textSize="11dp"

            android:text="Блинов Александр"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:id="@+id/date"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:gravity="end|center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/reviewText"
            android:layout_marginBottom="5dp"
            android:textSize="11dp"
            android:text="2 декабря 2018"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>