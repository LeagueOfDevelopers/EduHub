<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.eduhub.AuthorizedUserActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toLeftOf="@+id/search_card"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <android.support.v7.widget.CardView
            android:layout_alignParentRight="true"
            android:background="@color/grey"
            android:id="@+id/search_card"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/veryGrey"
            app:cardCornerRadius="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/searche_image"
                    android:layout_marginTop="3dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_black_24dp" />

                <EditText
                    style="@android:style/Widget.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/searche_image"
                    android:hint="Search"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/veryGrey"
                    android:textSize="13dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_authorized_user" />

</android.support.design.widget.CoordinatorLayout>
