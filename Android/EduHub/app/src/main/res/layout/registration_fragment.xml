<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metalic">
        <TextView

            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="Регистрация"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="24dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/error_layout_registr_email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_layout_registr_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            app:hintEnabled="false"
            >
        <EditText
            android:id="@+id/registr_email"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="7dp"
            android:background="@drawable/edit_text_style"
            android:paddingRight="7dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/registr_password2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/error_layout_registr_email"
            android:layout_alignStart="@+id/error_layout_registr_email"
            android:layout_below="@+id/error_layout_registr_email"
            android:layout_marginTop="18dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >

            <EditText
                android:id="@+id/registr_password"
                android:layout_width="260dp"
                android:layout_height="45dp"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text_style"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                 />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/registr_btn"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@+id/teacher_or_not"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/ellipse_background"
            android:text="Зарегистрироваться"
            style="@style/MyCustomTabLayout"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/error_layout_registr_login"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/error_layout_registr_email"
            android:layout_alignRight="@+id/error_layout_registr_email"
            android:layout_marginTop="140dp"
            app:hintEnabled="false">
        <EditText
            android:id="@+id/registr_login"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Имя"
            android:background="@drawable/edit_text_style"
            android:inputType="textPersonName"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" />
        </android.support.design.widget.TextInputLayout>
        <Switch
            android:id="@+id/teacher_or_not"
            android:layout_width="wrap_content"
            android:layout_below="@+id/registr_password2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:text="Преподавать"

            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>