<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metalic">
        <TextView

            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="Регистрация"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/registr_email"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@+id/registr_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="7dp"

            android:paddingRight="7dp"
            android:textAlignment="center" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/registr_password2"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/registr_email"
            android:layout_alignStart="@+id/registr_email"
            android:layout_below="@+id/registr_email"
            android:layout_marginTop="18dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:paddingTop="10dp"
            android:background="@drawable/edit_text_style">

            <EditText
                android:id="@+id/registr_password"
                android:layout_width="260dp"
                android:layout_height="25dp"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/metalic"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/registr_btn"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_below="@+id/teacher_or_not"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/ellipse_background"
            android:text="Зарегистрироваться"
            style="@style/MyCustomTabLayout"/>

        <EditText
            android:id="@+id/registr_login"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/registr_email"
            android:layout_alignRight="@+id/registr_email"
            android:layout_marginTop="140dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textAlignment="center" />

        <com.suke.widget.SwitchButton
            android:id="@+id/teacher_or_not"
            android:layout_width="54dp"
            app:sb_background="#3d3b3b"
            app:sb_show_indicator="false"
            android:layout_below="@+id/registr_password2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_height="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registr_password2"
            android:layout_toRightOf="@+id/teacher_or_not"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Преподавать"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>