<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.lod_misis.user.eduhub.AnotherProfileActivity"
    android:background="@color/veryGrey">


    <RelativeLayout
        android:id="@+id/window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:background="@color/grey"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/back"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/header"
            android:background="@color/metalic">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/metalic">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/ic_person_48px" />

                <TextView
                    android:id="@+id/name_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:text="Александр"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/email_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:layout_below="@+id/name_user_profile"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:text="eduHub@misis.ru"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="22dp"
                    android:gravity="end"
                    android:maxWidth="150dp"
                    android:text="статус"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_card"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/header_meddle_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/metalic">

                        <TextView
                            android:id="@+id/personal_data"
                            android:layout_width="102dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:text="Личные данные"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_name"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/personal_data"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_name"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Имя"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/name_user_profile2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Александр"
                                    android:textColor="@color/black" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_email"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/card_of_name"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_email"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Email"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/email_user_profile2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center_vertical"
                                    android:text="eduHub@misis.ru"
                                    android:textColor="@color/black"

                                    android:textSize="12dp" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_sex"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/card_of_email"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_sex"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Пол"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/sex"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Мужской"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/card_of_sex"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_birth"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Год рождения"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/birth_year"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center_vertical"
                                    android:text="1999"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_aboutMe"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/card_of_birth"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_aboutMe"
                                    android:layout_width="70dp"
                                    android:layout_height="46dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Обо мне"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/aboutMe"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Занимаюсь разработкой под андроид.Также постепенно совершенствуюсь и двигаюсь вперед,с оптимизмом в будущее!"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </RelativeLayout>


                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_of_skils"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_below="@+id/card_of_aboutMe"
                            app:cardCornerRadius="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/metalic">

                                <TextView
                                    android:id="@+id/title_card_of_skils"
                                    android:layout_width="70dp"
                                    android:layout_height="46dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center_vertical"
                                    android:text="Навыки"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/skils"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="82dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="15dp" />
                            </RelativeLayout>


                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/links"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_below="@+id/card_of_skils"
                            app:cardBackgroundColor="@color/metalic">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/contacts"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/metalic">

                            </android.support.v7.widget.RecyclerView>

                        </android.support.v7.widget.CardView>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <com.mindorks.placeholderview.ExpandablePlaceHolderView
                    android:id="@+id/expandableView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_meddle_card"
                    android:layout_marginTop="15dp"
                    android:scrollbars="vertical" />

                <com.mindorks.placeholderview.ExpandablePlaceHolderView
                    android:id="@+id/expandableView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandableView"
                    android:scrollbars="vertical" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
