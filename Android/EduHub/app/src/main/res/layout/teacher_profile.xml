<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/veryGrey">
        <android.support.v7.widget.CardView
            android:id="@+id/top_card"
            android:background="@color/metalic"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:background="@color/metalic"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/name_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Александр"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/email_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:layout_below="@+id/name_user_profile"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="@color/black"
                    android:text="eduHub@misis.ru"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="22dp"
                    android:gravity="end"
                    android:text="статус"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:maxWidth="150dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_card"
            android:layout_marginTop="15dp"
            android:id="@+id/scrollView2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <android.support.v7.widget.CardView
                android:id="@+id/header_meddle_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:background="@color/metalic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/personal_data"
                        android:layout_width="102dp"
                        android:layout_height="25dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"
                        android:text="Личные данные"
                        android:textSize="12dp"
                        />

                    <ImageView
                        android:id="@+id/refactor"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_mode_edit_black_18dp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_name"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/personal_data"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_name"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Имя"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/name_user_profile2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_vertical"
                                android:text="Александр"
                                android:textColor="@color/black" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_email"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/card_of_name"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_email"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Email"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/email_user_profile2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_vertical"
                                android:text="eduHub@misis.ru"
                                android:textColor="@color/black"

                                android:textSize="12dp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_sex"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/card_of_email"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_sex"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Пол"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/sex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_vertical"
                                android:text="Мужской"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/card_of_sex"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_birth"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Год рождения"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/birth_year"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_vertical"
                                android:text="1999"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_aboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/card_of_birth"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_aboutMe"
                                android:layout_width="70dp"
                                android:layout_height="46dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Обо мне"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/aboutMe"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:gravity="center_vertical"
                                android:text="Занимаюсь разработкой под андроид.Также постепенно совершенствуюсь и двигаюсь вперед,с оптимизмом в будущее!"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_of_skils"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/card_of_aboutMe"
                        app:cardCornerRadius="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/metalic">

                            <TextView
                                android:id="@+id/title_card_of_skils"
                                android:layout_width="70dp"
                                android:layout_height="46dp"
                                android:layout_marginLeft="12dp"
                                android:gravity="center_vertical"
                                android:text="Навыки"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/skils"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="82dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="15dp"
                                 />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/links"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/card_of_skils"
                        app:cardBackgroundColor="@color/metalic">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/contacts"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="12dp"
                            android:background="@color/metalic"
                            >

                        </android.support.v7.widget.RecyclerView>

                    </android.support.v7.widget.CardView>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
                <com.mindorks.placeholderview.ExpandablePlaceHolderView
                    android:id="@+id/expandableView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_below="@id/header_meddle_card"
                    android:layout_marginTop="15dp"/>
                <com.mindorks.placeholderview.ExpandablePlaceHolderView
                    android:id="@+id/expandableView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_below="@id/expandableView"
                    />

                <Button
                    android:id="@+id/exit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/expandableView2"
                    android:layout_marginTop="15dp"
                    android:background="@color/metalic"

                    android:text="Выход" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>