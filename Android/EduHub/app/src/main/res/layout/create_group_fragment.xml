<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="57dp"
            android:ems="10"
            android:hint="Название"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/participants"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/type_of_education"
            android:layout_alignStart="@+id/type_of_education"
            android:layout_below="@+id/type_of_education"
            android:ems="10"
            android:hint="14"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cost"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_below="@+id/type_of_education"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/participants"
            android:layout_toRightOf="@+id/participants"
            android:ems="10"
            android:hint="300$"
            android:inputType="textPersonName" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/type_of_education"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:ems="10"
            android:hint="Тип обучения"
            android:inputType="textPersonName" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/type_of_education"
            android:layout_alignRight="@+id/type_of_education"
            android:layout_below="@+id/type_of_education"
            android:layoutDirection="rtl"
            android:text="Приватность:" />

        <Button
            android:id="@+id/create_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Button" />

        <EditText
            android:id="@+id/tags"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/participants"
            android:layout_alignStart="@+id/participants"
            android:layout_below="@+id/participants"
            android:ems="10"
            android:hint="tags"
            android:inputType="textPersonName" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>